{% extends 'base.html.twig' %}


{% block title %} Mes commandes{% endblock %}

{% block body %}
    <h1>Mes commandes</h1>
<table class="table">
    <thead>
        <tr>
            <th>Numero</th>
            <th>Adresse</th>
            <th>Date de commande</th>
            <th>Produit</th>
            <th>Total</th>
        </tr>
    </thead>
    <tbody>
        {% for p in purchase %}
            <tr>
                <td>{{ p.id }}</td>
                <td>{{ p.address }}<br>{{ p.postalCode }}, {{ p.city }}</td>
                <td>{{ p.purchasedAt|date('d/m/y h:i') }}</td>
                <td>
                    {% for item in p.purchaseItems %}
                        <li>{{ item.quantity }}x{{ item.productName }}({{ item.Total/100 }}€)</li>
                    {% endfor %}
                </td>
                <td>{{ p.total/100 }}€</td>
            </tr>
        {% endfor %}
    </tbody>
</table>
{% endblock %}