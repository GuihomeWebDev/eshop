{% extends 'base.html.twig' %}

{% block title %} category : {{ product.name }}{% endblock %}

{% block body %}

    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="{{ path('home') }}">Acceuil</a></li>
        <li class="breadcrumb-item">
            <a href="{{ path('product_category',{'slug': product.category.slug}) }}">{{ product.category.name }}</a></li>
        <li class="breadcrumb-item active">{{ product.name }}</li>
    </ol>

    <h1>Page category: {{ product.name }}</h1>
    <h2>Voici l'article que vous avez sélectionnez</h2>
    <div class="row">
            <div class="col-4">
                <div class="card">
                    <img src="{{ product.picture }}" class="img-fluid" alt="">
                    <div class="card-boby">
                        <h4 class="card-title text-center">{{ product.name }} ({{ product.price }}€)</h4>
                        <span class="bagde badge-danger">{{ product.category.name }}</span>

                        <p class="card-text">{{ product.description}} </p>
                        <a href="{{ path('cart_add', {'id': product.id}) }}" class="btn btn-success btn-lg"><i class="fas fa-shopping-cart">Ajouter au pagnier</i></a>
                    </div>
                </div>
            </div>
    </div>

{% endblock %}