<div class="card">
    <img src="{{ p.picture }}" class="img-fluid" alt="">
    <div class="card-boby">
        <h4 class="card-title text-center">{{ p.name }} ({{ p.price }}€)</h4>
        <span class="bagde badge-info">{{ p.category.name }}</span>

        <p class="card-text">{{ p.description}} </p>
        <a href="{{path('product_show', {'category_slug': p.category.slug, 'slug': p.slug})}}" class="btn btn-primary btn-sm">Détail</a>
        <a href="{{path('cart_add', {'id': p.id})}}" class="btn btn-success btn-sm">Acheter</a>
    </div>
</div>